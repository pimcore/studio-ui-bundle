{# @var cssFiles string[] #}
{# @var jsFiles string[] #}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">

        {% for bundle in cssFiles %}
            {% for cssFile in bundle %}
                <link rel="stylesheet" href="{{ cssFile }}"/>
            {% endfor %}
        {% endfor %}
    </head>

    <body>
        <div id="app"></div>

        {% for bundleName, bundle in jsFiles %}
            {% for jsFile in bundle %}
                {% if bundleName == "Pimcore\\Bundle\\StudioUiBundle\\PimcoreStudioUiBundle" %}
                    <script src="{{ jsFile }}"></script>
                {% else %}
                    <script data-pimcore-studio-plugin="{{ jsFile }}"></script>
                {% endif %}
            {% endfor %}
        {% endfor %}
    </body>
</html>
